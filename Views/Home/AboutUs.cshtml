@{
    ViewData["Title"] = "About Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>About GBC Travel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  
    <style>


        body {
            background-color: whitesmoke;
        }

        .container {
            background-color: #E0D9EB;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
        .section-title {
            color: #4b0082;
        }


      
        .col-md-12 img {
            max-width: 30%;
        }

        .video-placeholder {
            background-color: #d3d3d3;
            height: 300px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 20px;
        }

            .video-placeholder img {
                max-width: 100%;
                max-height: 100%;
                border-radius: 10px;
            }

    </style>
</head>
<body>

    <div class="container text-center about-container">
        <h1 class="display-4 section-title">About GBC Travel</h1>

        <div class="row mt-4">
            <div class="col-md-6">
            </div>

            <p>
                Welcome to GBC Travel, your gateway to seamless and unforgettable flight experiences. We pride ourselves on delivering exceptional services, ensuring your journey is filled with comfort and joy. Whether you're a frequent flyer or embarking on your first adventure, GBC Travel is here to make every moment count.
            </p>
        </div>

        <div class="row mt-5">
            <div class="col-md-12 text-center">
                <img src="~/images/advertisement/gbc.jpeg" alt="GBC Travel" class="img-fluid rounded" style="max-width: 30%;" />
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <a asp-controller="Home" asp-action="Index" class="text-info">Travel With GBC</a>
                </div>
            </div>
            <div id="who-we-are" class="row mt-5">
                <div class="col-md-12 text-center">
                    <h2 class="section-title">Who We Are</h2>
                </div>
                <div class="col-md-4 mt-4">
                    <h4>Name: Kaman </h4>
                    <p>Student ID: 101424041</p>
                </div>

                <div class="col-md-4 mt-4">
                    <h4>Name: Liz </h4>
                    <p>Student ID:101470163 </p>
                </div>

                <div class="col-md-4 mt-4">
                    <h4>Name: Naomi</h4>
                    <p>Student ID: 101441399</p>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-md-12 text-center">
                    <h2 class="section-title">Explore Your Next Adventure</h2>
                </div>
            </div>

            <div class="col-md-12 video-placeholder">
                <video width="200%" height="100%" controls>
                    <source src="~/video/about.mp4" type="video/mp4">
                </video>
            </div>

        </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

