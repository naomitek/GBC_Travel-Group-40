<h2 id="section-title">Welcome To GBC Travel</h2>

<!-- Flights Section -->
<div id="flights-section" style="display:none;">
    <form asp-controller="Flights" asp-action="Search" method="get" class="mt-4">
        <div class="row">
            <div class="col-md-3 mb-3">
                <label for="leavingFrom" class="form-label">Leaving From:</label>
                <div class="input-group">
                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                <input type="text" class="form-control" name="leavingFrom" placeholder="Enter departure location" required>
            </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="goingTo" class="form-label">Going To:</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                <input type="text" class="form-control" name="goingTo" placeholder="Enter destination" required>
            </div>
        </div>
            <div class="col-md-3 mb-3">
                <label for="departureDate" class="form-label">Departure Date:</label>
                <input type="date" class="form-control" name="departureDate" required>
            </div>
            <div class="col-md-3 mb-3">
                <label for="passengers" class="form-label">Passengers:</label>
                <input type="number" class="form-control" name="numPassengers" min="1" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Search Flights</button>
    </form>
</div>

<!-- Hotels Section -->
<div id="hotels-section" style="display:none;">

    <form asp-controller="Room" asp-action="Search" method="get" class="mt-4">
        <div class="row">
            <div class="col-md-3 mb-3">
                <label for="location" class="form-label">Destination City:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                    <input type="text" class="form-control" name="location" placeholder="Enter destination city" required>
            </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="checking" class="form-label">Check-In Date:</label>
                <input type="date" class="form-control" name="checking" required>
            </div>
            <div class="col-md-3 mb-3">
                <label for="checkout" class="form-label">Check-Out Date:</label>
                <input type="date" class="form-control" name="checkout" required>
            </div>
            <div class="col-md-3 mb-3">
                <label for="numberOfBeds" class="form-label">Beds:</label>
                <input type="number" class="form-control" name="numberOfBeds" min="1" max="2" required>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Search Hotels</button>
    </form>
</div>

<!-- Car Rentals Section -->
<div id="car-rentals-section" style="display:none;">

    <form asp-controller="Car" asp-action="Search" method="get" class="mt-4">
        <div class="row">
            <div class="col-md-3 mb-3">
                <label for="pickupLocation" class="form-label">Pickup Location:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                    <input type="text" class="form-control" name="pickupLocation" placeholder="Enter pickup location" required>
            </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="dropOffLocation" class="form-label">Drop-Off Location:</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                    <input type="text" class="form-control" name="dropOffLocation" placeholder="Enter drop-off location" required>
            </div>
            </div>
            <div class="col-md-3 mb-3">
                <label for="rentaldate" class="form-label"> Rental Date:</label>
                <input type="date" class="form-control" name="rentaldate" required>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Search Car Rentals</button>
    </form>
</div>

