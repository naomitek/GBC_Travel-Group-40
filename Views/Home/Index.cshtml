<script>function showFlights() {
        showSection('flights-section', 'Flights', 'fas fa-plane');
    }

    function showHotels() {
        showSection('hotels-section', 'Hotels', 'fas fa-hotel');
    }

    function showCarRentals() {
        showSection('car-rentals-section', 'Car Rentals', 'fas fa-car');
    }

    function showSection(sectionId, sectionTitle, iconClass) {
        // Hide all sections
        $('#flights-section').hide();
        $('#hotels-section').hide();
        $('#car-rentals-section').hide();

        // Show the selected section
        $('#' + sectionId).show();

        // Update the section title with icon
        $('#section-title').html(`<i class="${iconClass}"></i> ${sectionTitle}`);
    }</script>


