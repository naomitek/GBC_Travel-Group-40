@model GBC_Travel_Group_40.Models.Cart

@{
    ViewData["Title"] = "Delete Item";
     // ViewBag.car
      // ViewBag.flight
       // ViewBag.room
}

<h1>@ViewData["Title"] </h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">

        <div>
        <dt class="col-sm-10">
                Booking for: @Model.ProductType
        </dt>
        @{
            if(ViewBag.flight != null)
            {
                <dt class="col-sm-10">
                        Airlines: @ViewBag.flight.Airlines
                </dt>
                    <dt class="col-sm-10">
                        @ViewBag.flight.Origen - @ViewBag.flight.Destination
                    </dt>
            }
            if (ViewBag.car != null)
            {
                <dt class="col-sm-10">
                        Car Company: @ViewBag.car.CarCompany
                </dt>
                    <dt class="col-sm-10">
                        car Model: @ViewBag.car.Model
                    </dt>
            }
            if (ViewBag.room != null)
            {
                <dt class="col-sm-10">
                    Hotel: @ViewBag.room.HotelName
                </dt>
            }
        }
        </div>

        <dt class = "col-sm-2">
            $@Model.Price
        </dt>
    </dl>
    
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ProductId" method="post">
        @Html.HiddenFor(model => model.ProductId)
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
