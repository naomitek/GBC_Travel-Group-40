@model Cars
@{
    ViewData["Title"] = "Car Details";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>Car Details</h1>
    <dl class="row">
        <div><img src="~/images/cars/@Model.Url" width="400" height="280" /></div>

        <dt class="col-sm-2">Company</dt>
        <dd class="col-sm-10">@Model.CarCompany</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.OrigenLocation to @Model.DestinationLocation</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10"> @Model.DepartureTime.ToString("dd/mm/yyyy") to @Model.ArrivalTime.ToString("dd/mm/yyyy")</dd>

        <dt class="col-sm-2">Pricing</dt>
        <dd class="col-sm-10">@Model.Pricing.ToString("C")</dd>
        <dt>Available</dt>
        @{
            if (Model.Available)
            {
                <dd class="col-sm-10">Yes</dd>
            }else
            {
                <dd class="col-sm-10">No</dd>
            }
        }
    </dl>

    <a asp-controller="CarBooking" asp-action="Create" asp-route-fid="@Model.CarId" asp-route-pid="1" class="btn btn-secondary">Booking</a>
    <a asp-action="" class="btn btn-info">Back to List</a>

</body>
</html>
